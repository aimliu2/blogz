---
blog_limit : 4
permalink : /assets/ts/main.js
---

import {navRender} from "{{ site.baseurl }}/assets/ts/js/navbar/navbar.js.liquid"
import {heroRender} from "{{ site.baseurl }}/assets/ts/js/hero/hero.js.liquid"
import {footRender} from "{{ site.baseurl }}/assets/ts/js/footer/footer.js.liquid"
import {blogRender} from "{{ site.baseurl }}/assets/ts/js/blogs/blogpage.js.liquid"
import {docReady, construct, s_arr} from "{{ site.baseurl }}/assets/ts/js/app.js.liquid"

// execute
// render components in order
const renderLandingPage = (highlight) => {
    document.querySelector('#app').innerHTML += construct(s_arr);
    document.querySelector('#navbar').innerHTML = navRender(highlight); // navbar
    let content = document.querySelector('#content')
    content.classList.add('container'); // content row mb-2
    content.innerHTML += heroRender(); // content
    let blog = document.createElement("div");
    blog.id = "blog";
    blog.classList.add('row');blog.classList.add('mb-2');
    content.appendChild(blog);
    {% for post in site.posts limit:page.blog_limit %}
    // append html
    blog.innerHTML += blogRender("{{post.category}}", "{{post.title}}", "{{ post.date | date_to_string }}", "{{ post.description | truncate_words: 20 }}", "{{post.url}}" ,"{{post.cover_image}}")
    {% endfor %}
    document.querySelector('#footer').innerHTML = footRender(); // footer
}

docReady(renderLandingPage('Home'))

